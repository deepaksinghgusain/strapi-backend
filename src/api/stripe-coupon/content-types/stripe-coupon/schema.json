    },
    "duration": {
      "type": "enumeration",
      "enum": [
        "once",
        "month",
        "forever"
      ],
      "default": "forever",
      "required": true
    },
    "durationInMonth": {
      "type": "integer",
      "min": 0,
      "max": 12
